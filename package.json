{
  "name": "keyosd",
  "version": "1.0.0",
  "description": "Display keystrokes and shortcuts in an on-screen overlay",
  "type": "module",
  "main": "./dist/keyosd.umd.cjs",
  "module": "./dist/keyosd.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/keyosd.js",
      "require": "./dist/keyosd.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./standalone": {
      "import": "./dist/keyosd.standalone.js",
      "require": "./dist/keyosd.standalone.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:standalone",
    "build:lib": "tsc && vite build",
    "build:standalone": "BUILD_MODE=standalone vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.0"
  },
  "keywords": [
    "keystroke",
    "osd",
    "overlay",
    "visualization",
    "screen-recording",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
